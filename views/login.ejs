<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
  integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous" />
<link rel="stylesheet" href="../public/css/login.css" />


<div class="row bg">
  <div class="col-lg-6">
    <div class="container">
      <h1>Sign In</h1>
      <h6>Sign in to your existing account</h6>
      <br />
      <form method="POST" action="/login" class="needs-validation" novalidate>
        <div>
          <input type="text" name="username" placeholder="Username" class="element form-input" required />
          <div class="invalid-feedback">Please enter username!</div>
        </div>
        <br />
        <div>
          <input type="password" name="password" placeholder="Password" class="element form-input" id="password"
            required />
          <div class="invalid-feedback">Please enter password!</div>
        </div>
        <br />
        <input type="checkbox" name="show" class="show" onclick="showpass()" />
        Show Password<br />
        <button class="btn" id="log-in-btn">Login</button>
      </form>

      <span>Don't have an account?<a href="/signup" id="signup">Sign Up</a>
      </span>
    </div>
  </div>
  <div class="col-lg-6">
    <img src="/public/img/login-img.png" alt="Log-in Image" class="log-in-img" />
  </div>
</div>

