<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
<link rel="stylesheet" href="../public/css/signup.css">


<div class="row bg">
    <div class="col-lg-6">
        <div class="container">
            <h1>Register</h1>
            <h6>Create a new account</h6>

            <form method="POST" action="/signup" class="needs-validation" novalidate>
                <div class="row">
                    <div class="col-md-6">
                        <input type="text" name="First Name" placeholder="First Name" class="element form-input"
                            required>
                        <div class="invalid-feedback">This field can't be left empty!</div>
                    </div>
                    <div class="col-md-6">
                        <input type="text" name="Last Name" placeholder="Last Name" class="element form-input" required>
                        <div class="invalid-feedback">This field can't be left empty!</div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <input type="email" name="email" placeholder="Email" class="element form-input" required>
                        <div class="invalid-feedback">Enter a valid email address!</div>
                    </div>
                    <div class="col-12">
                        <input type="text" name="username" placeholder="Username" class="element form-input" required>
                        <div class="invalid-feedback">Please Enter a Username!</div>
                    </div>
                    <div class="col-12">
                        <input type="password" name="password" placeholder="Password" class="element form-input"
                            id="pass" required>
                        <div class="invalid-feedback">Please enter a password!</div>
                    </div>
                    <div class="col-12">
                        <input type="password" name="confirm" placeholder="Confirm Password" class="element form-input"
                            id="confirm" required>
                        <div class="invalid-feedback">Confirm your password!</div>
                    </div>
                </div>
                <input type="checkbox" onclick="myFunction()"> &nbsp; Show Password<br>
                <span>Already have an account?<a href="/login">Sign In</a></span>
                <button class="btn" id="submit" onclick="check()"> Submit </button>
        </div>
        </form>
    </div>
    <div class="col-lg-6">
        <img src="/public/img/login-img.png" class="signup-image">
    </div>
</div>

