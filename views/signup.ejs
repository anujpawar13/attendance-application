<!-- Bootstrap -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
<link rel="stylesheet" href="../public/css/signup.css">
<%- include("./partials/favicon.ejs") %>
    <img src="../public/img/logo.png" alt="Logo" class="logo">
    
    <div class=row>
        <div class="col-lg-6">
        <h1> Create An Account</h1>
        <hr id="hr">
        <div class="container-fluid">
            <form method="POST" action="/signup" class="needs-validation" novalidate>
                <div class="row">
                    <div class="col-md-6">
                            <input type="text" name="First Name" placeholder="First Name" class="element form-control" required>
                            <div class="invalid-feedback">This field can't be left empty!</div>
                        </div>
                        <div class="col-md-6">
                            <input type="text" name="Last Name" placeholder="Last Name" class="element form-control" required>
                            <div class="invalid-feedback">This field can't be left empty!</div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <input type="email" name="email" placeholder="Email" class="element form-control" required>
                            <div class="invalid-feedback">Enter a valid email address!</div>
                        </div>
                        <div class="col-12">
                            <input type="text" name="username" placeholder="Username" class="element form-control" required>
                            <div class="invalid-feedback">Please Enter a Username!</div>
                        </div>
                        <div class="col-12">
                            <input type="password" name="password" placeholder="Password" class="element form-control" id="pass" required>
                            <div class="invalid-feedback">Please enter a password!</div>
                        </div>
                        <div class="col-12">
                            <input type="password" name="confirm" placeholder="Confirm Password" class="element form-control" id="confirm" required>
                            <div class="invalid-feedback">Confirm your password!</div>
                        </div>
                    </div>
                    <input type="checkbox" onclick="myFunction()" >Show Password<br>
                    <span><a href="/login">Already Have An Account</a></span>
                    <button class="btn btn-outline-success" id="submit" onclick="check()"> Submit </button>
                </form>
            </div>
        </div>
        <div class="col-lg-6">
            <img src="../public/img/signup-img.svg" class="signup-image">
        </div>
    </div>

    <%- include("./partials/footer.ejs") %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
<script src="../public/js/signup.js" ></script>