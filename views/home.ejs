    <script>
      var x = `<%- JSON.stringify(attendanceData) %>`;
      var y = JSON.parse(x)
      let z = y[0];
      console.log(y, typeof (y))
      console.log(z, typeof (z))
      function edit(e) {
        var datestring = moment(y[e.id].attendance_date).format('YYYY-MM-DD');
        var timestring = moment(y[e.id].attendance_date).format('hh:mm');
        document.getElementById('sno_link').value = Number(e.id) + Number(1);
        document.getElementById('meet_url').value = y[e.id].url;
        document.getElementById('participants').value = y[e.id].data.length;
        document.getElementById('atten_id').value = y[e.id]._id;
        document.getElementById('meet_date').value = datestring;
        document.getElementById('meet_time').value = timestring;
        document.getElementById('meet_creator').value = y[e.id].taker;
        console.log(e);

      }
      function deleteYes(e) {

        let x = window.confirm("confirm Deletion?")
        if (x) {
          var id = e.id;
          $.post(`/home/${id}/delete`,
            {

            },
            function (data, status) {
              window.location.reload();
            });
        }
      }

    </script>

    <section class="dashboard">
      <div class="wrapper">
        <div class="welcome">
            <h1>Welcome, <%= username %></h1>
            <p>Your attendance records,</p>
        </div>
        <div class="table">

          <table id="tab">
            <thead>
              <tr>
                <th scope="col">Meet Link</th>
                <th scope="col">No. of Participants</th>
                <th scope="col">Date</th>
                <th scope="col">Time</th>
                <th scope="col">Creator</th>
                <th scope="col">Controls</th>
              </tr>
            </thead>
            <tbody>

              <% for(let i=0; i < attendanceData.length; ++i) { %>
                <tr>
                  <td>
                    <%= attendanceData[i].url %>
                  </td>
                  <td>
                    <%= attendanceData[i].data.length %>
                  </td>
                  <td>
                    <%= moment(attendanceData[i].attendance_date).format("DD/MM/YYYY") %>
                  </td>
                  <td>
                    <%= attendanceData[i].attendance_date.toLocaleTimeString('en-US') %>
                  </td>
                  <td>
                    <%= attendanceData[i].taker %>
                  </td>
                  <td>
                    <button style="color: rgb(88, 185, 84);" class="controls ctrl-btn"
                      onclick="document.location='/home/<%= attendanceData[i]._id %>/details'"><i class="fas fa-book-open"
                        title="Read"></i></button>

                    <button style="color: rgb(39, 94, 245);" class="controls ctrl-btn" data-target="#edit-popup"
                      id="<%=(i)%>" onclick="edit(this);"><i class="fas fa-pen" title="Edit"></i></button>

                    <button style="color: rgb(230, 62, 62);" type="submit" data-target="#delete-popup"
                      id="<%= attendanceData[i]._id%>" onclick="deleteYes(this)" class="controls ctrl-btn"
                      title="Delete"><i class="fas fa-trash"></i></button></form>
                  </td>
                </tr>
                <%}%>

            </tbody>
          </table>
        </div>

        <div class="buttons">
          <button class="btn1 btn-outline-success" data-target="#popup">+ Add Entry</button>
          <button class="btn2 btn-outline-success" data-target="#links-popup">Copy Code</button>

        </div>
    </section>
